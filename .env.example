# Azure OpenAI 설정
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here

# Azure OpenAI API 버전 (최신 GA 버전)
AZURE_OPENAI_API_VERSION=2024-10-21

# 배포된 모델 이름
# GPT-4 텍스트 모델 (채팅, 텍스트 생성용)
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# GPT-4o 멀티모달 모델 (텍스트 + 이미지 처리)
# gpt-4o는 GPT-4 Vision을 대체하며 더 나은 성능 제공
AZURE_OPENAI_VISION_DEPLOYMENT_NAME=gpt-4o

# 임베딩 모델 (text-embedding-ada-002 또는 text-embedding-3-small/large)
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002
